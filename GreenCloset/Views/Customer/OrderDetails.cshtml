@{
    var order = ViewBag.Order as Order;
    var groupedByStore = ViewBag.GroupedByStore as Dictionary<User, List<OrderDetail>>;
    var userName = ViewBag.UserName;
    var shippingFee = groupedByStore?.Count >= 2 ? 50000 : 25000;
    double totalProduct = 0;

    if (groupedByStore != null)
    {
        foreach (var storeGroup in groupedByStore)
        {
            foreach (var item in storeGroup.Value)
            {
                var days = (item.EndDate - item.StartDate)?.Days ?? 1;
                if (days < 1) days = 1;

                var total = item.UnitPrice * item.Quantity * days;
                totalProduct += total;
            }
        }
    }

    //Status
    var steps = new[]
    {
        new { Icon = "fas fa-file-alt", Text = "Đơn Hàng Đã Đặt", Time = order?.OrderDate.ToString("dd/MM/yyyy HH:mm") },
        new { Icon = "fas fa-truck", Text = "Đã Giao Cho Shipper", Time = order?.OrderDate.ToString("dd/MM/yyyy HH:mm") },
        new { Icon = "fas fa-box-open", Text = "Đã Nhận Được Hàng", Time = order?.OrderDate.ToString("dd/MM/yyyy HH:mm") }
    };

    int currentStep = order?.Status switch
    {
        OrderStatus.Pending => 0,
        OrderStatus.Delivering => 1,
        OrderStatus.Completed => 2,
        OrderStatus.Cancelled => 3,
        _ => -1
    };
    ViewData["Title"] = "Chi tiết đơn hàng";
}


<div class="container py-5">
    <div class="row">
        <div class="col-12">
            <div class="card border-0 shadow-lg rounded-3">
                <div class="card-body p-0">
                    <div class="row g-0">
                        <!-- Sidebar -->
                        <div class="col-lg-3 border-end">
                            <div class="p-4">
                                <div class="nav flex-column nav-pills">
                                    <a class="nav-link  text-black" asp-action="Profile" asp-controller="User">
                                        <i class="fa fa-user me-2"></i> Thông tin cá nhân
                                    </a>
                                    <a class="nav-link text-black" asp-action="ChangePassword" asp-controller="User"><i class="fa fa-lock me-2"></i>Bảo mật</a>
                                    <a class="nav-link text-white active" asp-action="ManageOrder" asp-controller="Customer"
                                       style="background-color: #198754 !important;">
                                        <i class="fa fa-truck-fast me-2"></i> Lịch sử đơn hàng
                                    </a>
                                </div>
                            </div>
                        </div>

                        <!-- Content Area -->
                        <div class="col-lg-9">
                            <div class="p-4">
                                
                                <!-- Header -->
                                <div class="d-flex justify-content-between align-items-center border-bottom border-2 border-light pb-2 mb-4">
                                    <button asp-action="ManageOrder" asp-controller="Customer" class="btn btn-link text-secondary p-0 d-flex align-items-center gap-1" type="button">
                                        <i class="fas fa-chevron-left fs-5"></i>
                                        <span class="fs-6">TRỞ LẠI</span>
                                    </button>
                                    <div class="d-flex align-items-center gap-2 fs-6 text-secondary">
                                        <span>MÃ ĐƠN HÀNG:</span>
                                        <span class="fw-semibold text-dark">@order?.Id</span>
                                    </div>
                                </div>

                                <!--Status-->
                                <div class="d-flex justify-content-between align-items-center mb-4">

                                    @for (int i = 0; i < steps.Length; i++)
                                    {
                                        var isActive = i <= currentStep;
                                        var isLast = i == steps.Length - 1;
                                        var isLineActive = i < currentStep; // thanh kết nối xanh nếu bước tiếp theo đã hoàn thành

                                        @if (order?.Status != OrderStatus.Cancelled){
                                            <div class="step d-flex flex-column align-items-center position-relative">
                                                <div class="@(isActive ? "icon-circle" : "icon-circle-disable")">
                                                    <i class="@steps[i].Icon"></i>
                                                </div>
                                                <div class="step-text mt-2">@steps[i].Text</div>
                                                <div class="time">@steps[i].Time</div>
                                                @if (!isLast)
                                                {
                                                    <div class="@(isLineActive ? "progress-line" : "progress-line-disable")"></div>
                                                }
                                            </div>
                                        }else
                                        if (i == steps.Length - 1 && order?.Status == OrderStatus.Cancelled){

                                            <div class="text-danger fw-bold">Bạn đã hủy đơn hàng
                                                <p class="text-gray-500 small">vào @order?.OrderDate.ToString("dd/MM/yyyy HH:mm")</p>
                                            </div>
                                        }
                                    }
 
                                    @*
                                    <!-- validate review -->
                                    <div class="step d-flex flex-column align-items-center position-relative">
                                        <div class="icon-circle-disable">
                                            <i class="fas fa-star"></i>
                                        </div>
                                        <div class="step-text mt-2">Đánh Giá</div>
                                        <div class="time">11:06 13-05-2025</div>
                                    </div>
                                   *@
                                    
                                </div>
                                <!-- Address and Status Section -->
                                <div class="border-bottom border-gray-200 pb-4 mb-4">
                                    <!-- <div class="text-black fw-normal fs-5 text-center">Chi tiết mã đơn hàng #@order?.Id</div> -->
                                    <div class="d-flex justify-content-between align-items-start mb-3">
                                        
                                        <div>
                                            <h2 class="text-gray-700 fw-normal fs-5">
                                                Địa Chỉ Nhận Hàng
                                            </h2>
                                            <h3 class="mt-2 fw-semibold text-gray-900">
                                                @userName
                                            </h3>
                                            <p class="text-gray-500 small mt-1 mb-0">
                                                (+84) @order?.PhoneNumber
                                            </p>
                                            @if (order?.DeliveryOption == DeliveryOption.HomeDelivery)
                                            {
                                                <p class="text-gray-500 small mt-1 mb-0" style="max-width: 320px; line-height: 1.2;">
                                                    @order?.ShippingAddress
                                                </p>
                                            }else{
                                                <p class="text-gray-500 small mt-1 mb-0" style="max-width: 320px; line-height: 1.2;">
                                                    Nhận tại cửa hàng
                                                    khu đô thị FPT
                                                </p>
                                            }
                                        </div>
                                        <div class="text-end text-muted small" style="line-height: 1.1;">
                                            <div>
                                                Giao Hàng Hỏa Tốc
                                            </div>
                                            <div class="fw-semibold mt-1">
                                                GreenCloset
                                            </div>
                                        </div>
                                    </div>
                                    
                                </div>
                                <!-- Multiple Stores Section -->
                                <!-- Store 1 -->
                                @foreach (var storeGroup in groupedByStore!)
                                {
                                    var store = storeGroup.Key;
                                    var details = storeGroup.Value;

                                    <div class="border-bottom border-gray-200 pb-3 mb-4">
                                        <div class="d-flex align-items-center gap-2 mb-2 flex-wrap">
                                            <h3 class="fw-semibold mb-0 fs-6 text-primary">
                                                <i class="fa-solid fa-shop"></i> @store.UserName
                                            </h3>
                                        </div>
                                        <!-- Products for Store 1 -->
                                        @foreach (var item in details)
                                        {
                                            var days = (item.EndDate - item.StartDate)?.Days ?? 1;
                                            if (days < 1) { days = 1; }
                                            var total = item.UnitPrice * item.Quantity * days;
                                            <div class="d-flex gap-3 mb-3">
                                                @if(item.Product?.ProductAvatar != null){
                                                    <img class="flex-shrink-0 object-contain" height="80" src="@item.Product?.ProductAvatar?.ImagePath"
                                                         width="80" />
                                                }else{
                                                    <img src="https://upload.wikimedia.org/wikipedia/commons/1/14/No_Image_Available.jpg" alt="Product" class="img-thumbnail" style="width: 80px; height: 80px;" />
                                                }

                                                <div class="flex-grow-1">
                                                    <p class="mb-1 fs-6 text-black fw-bold" style="line-height: 1.2;">
                                                        @item.Product?.Name
                                                    </p>
                                                    <p class="text-gray-400 small mb-1">
                                                        Phân loại hàng: @item.Product?.Color -
                                                        @if (item.SizeShoe.HasValue)
                                                        {
                                                            @item.SizeShoe
                                                        }
                                                        else if (item.SizeClother.HasValue)
                                                        {
                                                            @item.SizeClother
                                                        }
                                                        else
                                                        {
                                                            <text>Chưa chọn</text>
                                                        }
                                                    </p>
                                                    <p class="text-gray-400 small mb-1">
                                                        @days ngày (@item.StartDate?.ToString("dd/MM/yyyy") - @item.EndDate?.ToString("dd/MM/yyyy"))
                                                    </p>
                                                    <p class="mb-0 fs-6 text-black">
                                                        x @item.Quantity
                                                    </p>
                                                </div>
                                                <div class="text-end flex-shrink-0" style="min-width: 80px;">
                                                    <div>
                                                        Đơn giá: @item.UnitPrice.ToString("N0") ₫
                                                    </div>
                                                    <div class="text-primary fw-bold">
                                                        Tạm tính: @total.ToString("N0") ₫      
                                                    </div>
                                                </div>
                                            </div>
                                        }


                                    </div>
                                }

                                <!-- Price Details Section -->
                                <div class="border border-gray-100 rounded-sm mb-4">
                                    <div class="d-flex justify-content-between px-3 py-2 text-gray-600 small border-bottom border-gray-100">
                                        <span>
                                            Tổng tiền hàng
                                        </span>
                                        <span>
                                            @totalProduct.ToString("N0") ₫
                                        </span>
                                    </div>
                                    @if (order?.DeliveryOption == DeliveryOption.HomeDelivery)
                                    {
                                        <div class="d-flex justify-content-between px-3 py-2 text-gray-600 small border-bottom border-gray-100">
                                            <span>
                                                Phí vận chuyển
                                            </span>
                                            <span>
                                                @shippingFee.ToString("N0") ₫
                                            </span>
                                        </div>
                                    }

                                    <div class="d-flex justify-content-between px-3 py-2 text-primary price-large fw-bold">
                                        <span>
                                            Thành tiền
                                        </span>
                                        <span class="text-primary">
                                            @order?.TotalPrice.ToString("N0") ₫
                                        </span>
                                    </div>
                                </div>
                                <!-- Payment Reminder -->
                                @if (order?.PaymentMethod == PaymentMethod.PayByCash)
                                {
                                    <div class="bg-light-yellow rounded-sm border border-warning px-3 py-2 mb-4 d-flex align-items-center gap-2 small">
                                        <i class="fas fa-exclamation-circle"></i>
                                        <p class="mb-0">
                                            Vui lòng thanh toán
                                            <span class="price-red fw-semibold select-text text-primary">
                                                @order?.TotalPrice.ToString("N0") ₫
                                            </span>
                                            khi nhận hàng.
                                        </p>
                                    </div>
                                }
                                else
                                {
                                    <div class="bg-light-success rounded-sm border border-success px-3 py-2 mb-4 d-flex align-items-center gap-2 small">
                                        <i class="bi bi-emoji-kiss"></i>
                                        <p class="mb-0">
                                            Bạn đã thành toán
                                            <span class="price-red fw-semibold select-text text-primary">
                                                @order?.TotalPrice.ToString("N0") ₫
                                            </span>
                                            bằng VNPay.
                                        </p>
                                    </div>
                                }

                                <!-- Payment Method -->
                                <div class="d-flex justify-content-between text-muted small border-top border-gray-200 pt-2">
                                    <span>
                                        Phương thức Thanh toán
                                    </span>
                                    <span class="fw-bold text-gray-900">
                                        @(order?.PaymentMethod == PaymentMethod.PayByCash ? "Thanh toán tiền mặt" : "VNPay")
                                    </span>
                                </div>
                            </div>
                        </div> <!-- End Content Area -->
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

