﻿@{
    ViewData["Title"] = "Gửi lại email xác nhận";
}

<div class="login-form">
    <section class="py-3 py-md-5 py-xl-8 confirmation-background">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-12 col-lg-8">
                    <div class="card shadow-sm my-5 px-4 py-4">
                        <div class="card-body p-4">
                            <h2 class="card-title text-center mb-4">Gửi lại email xác nhận</h2>

                            <form method="post">
                                <div class="row gy-3">
                                    <div class="col-12">
                                        <div class="form-floating mb-3">
                                            <input class="form-control border-0 border-bottom rounded-0"
                                                   id="email"
                                                   name="email"
                                                   type="email"
                                                   placeholder="name@example.com"
                                                   required
                                                   autocomplete="email">
                                            <label for="email" class="form-label">
                                                <i class="bi bi-envelope"></i> Email
                                            </label>
                                        </div>
                                    </div>

                                    <div class="col-12">
                                        <div class="d-grid">
                                            <button class="btn btn-success btn-lg" type="submit">
                                                Gửi email xác nhận
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </form>

                            <div class="text-center mt-3">
                                <p class="text-muted">
                                    Bạn đã xác nhận email? <a asp-action="Login" class="text-decoration-underline">Trở lại đăng nhập</a>
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>

@section Styles {
    <link rel="stylesheet" href="~/css/login.css" />
}