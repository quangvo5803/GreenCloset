﻿@{
    ViewData["Title"] = "Đặt lại mật khẩu";
}

<div class="login-form">
    <section class="py-3 py-md-5 py-xl-8 confirmation-background">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-12 col-lg-8">
                    <div class="card shadow-sm">
                        <div class="card-body p-4 px-4 py-4">
                            <h2 class="card-title text-center mb-4">Đặt lại mật khẩu</h2>

                            <form method="post">
                                <div class="row gy-3 overflow-hidden">
                                    <div class="col-12">
                                        <div class="form-floating mb-3">
                                            <input class="form-control border-0 border-bottom rounded-0" name="email" type="email" placeholder="name@example.com" value="@ViewBag.Email" readonly>
                                            <label class="form-label"><i class="bi bi-envelope"></i> Email</label>
                                        </div>
                                    </div>
                                    <div class="col-12">
                                        <div class="form-floating mb-3 position-relative">
                                            <input id="password" class="form-control border-0 border-bottom rounded-0" name="password" type="password" placeholder="Nhập mật khẩu:" required>
                                            <label class="form-label"><i class="bi bi-lock"></i> Mật khẩu:</label>
                                            <i class="bi bi-eye-slash position-absolute top-50 end-0 translate-middle-y me-3 toggle-password" data-target="password" style="cursor: pointer;"></i>
                                        </div>
                                        <ul class="password-criteria list-unstyled mt-2">
                                            <li id="criteria-length" class="text-muted"><i class="bi bi-x-circle"></i> Ít nhất 8 ký tự</li>
                                            <li id="criteria-uppercase" class="text-muted"><i class="bi bi-x-circle"></i> Chứa ít nhất 1 chữ hoa</li>
                                            <li id="criteria-number" class="text-muted"><i class="bi bi-x-circle"></i> Chứa ít nhất 1 chữ số</li>
                                            <li id="criteria-special" class="text-muted"><i class="bi bi-x-circle"></i> Chứa ít nhất 1 ký tự đặc biệt (!#$%^&*)</li>
                                        </ul>
                                    </div>
                                    <div class="col-12">
                                        <div class="form-floating mb-3 position-relative">
                                            <input id="repassword" class="form-control border-0 border-bottom rounded-0" name="repassword" type="password" placeholder="Nhập lại mật khẩu" required>
                                            <label class="form-label"><i class="bi bi-lock"></i> Nhập lại mật khẩu:</label>
                                            <i class="bi bi-eye-slash position-absolute top-50 end-0 translate-middle-y me-3 toggle-password" data-target="repassword" style="cursor: pointer;"></i>
                                        </div>
                                    </div>
                                    <div class="col-12">
                                        <div class="d-grid">
                                            <button class="btn btn-success btn-lg" type="submit">Lưu</button>
                                        </div>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="~/js/passwordvalidate.js" asp-append-version="true"></script>
}
@section Styles {
    <link rel="stylesheet" href="~/css/login.css" />
}