@{
    var isLoggedIn = User?.Identity?.IsAuthenticated ?? false;
    var userId = isLoggedIn ? User?.FindFirst(ClaimTypes.NameIdentifier)?.Value : null;
}
@model Product
@Html.AntiForgeryToken()

    <div class="image-holder">
        @if (Model.ProductAvatar != null)
        {
            <img src="@Model.ProductAvatar.ImagePath" alt="" class="product-image">
        }
        else
        {
            <img src="https://upload.wikimedia.org/wikipedia/commons/1/14/No_Image_Available.jpg" alt="" class="product-image">
        }
    </div>
    <div class="cart-concern">
        <div class="cart-button d-flex justify-content-between align-items-center">
            <a href="#"
                class="btn-wrap cart-link d-flex align-items-center me-2 add-to-cart-btn"
                data-product-id="@Model.Id" data-user-id="@userId">
                Thêm vào <i class="ms-1 icon icon-arrow-io"></i>
            </a>
            <a asp-action="ProductDetail" asp-controller="Home" asp-route-id="@Model.Id" type="button" class="view-btn d-flex">
                <i class="icon icon-screen-full"></i>
            </a>
            <a asp-action="" asp-controller="Customer" type="button" class="wishlist-btn">
                <i class="icon icon-heart"></i>
            </a>
        </div>
    </div>
    <div class="product-detail mt-3">
        <h3 class="product-title">
        <a asp-action="ProductDetail" asp-controller="Home" asp-route-id="@Model.Id">@Model.Name</a>
        </h3>
        <span class="item-price text-primary">@Model.Price.ToString("C", new CultureInfo("vi-VN"))</span>
    </div>


 